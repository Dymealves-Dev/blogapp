{{#each errors}}
<div class="alert alert-danger">{{this.text}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <form action="/admin/users/edit" method="post" autocomplete="off">
            <header>
                <h1>Editar Usuário</h1>
                <span style="font-size: 1.325em;">Preencha o Formulário</span>
            </header>
        
            <input type="hidden" name="id" value="{{user._id}}">

            <label for="fullName"></label>
                <input type="text" name="fullName" class="form-control mt-3" id="fullName" value="{{user.fullName}}">
            <label for="permissions"></label>
                <select name="permissions" id="permissions" class="form-select mt-3">
                        <option value="client">Client</option>
                        <option value="admin">Admin</option>
                </select>

            <a href="/admin/users">
                <button type="button" class="btn btn-danger mt-4">Cancelar</button>
            </a>
            <button type="submit" class="btn btn-success mt-4">Salvar</button>
        </form>
    </div>
</div>